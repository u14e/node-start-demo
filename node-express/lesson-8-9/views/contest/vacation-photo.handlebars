<div class="form-container">
    <form class="form-horizontal" enctype="multipart/form-data" action="/contest/vacation-photo/{{year}}/{{month}}" method="POST">
        <div class="form-group">
            <label for="name" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="name" name="name">
            </div>
        </div>
        <div class="form-group">
            <label for="email" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" name="email" id="email">
            </div>
        </div>
        <div class="form-group">
            <label for="photo" class="col-sm-2 control-label">Vacation photo</label>
            <div class="col-sm-4">
                <input type="file" class="form-control" accept="image/*" id="photo" name="photo">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-default">Sign up</button>
            </div>
        </div>
    </form>
</div>