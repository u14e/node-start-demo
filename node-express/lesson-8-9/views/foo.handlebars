<ul>
    {{#each tours}}
        {{! a new block and the context has changed}}
        <li>
            {{name}} - {{price}}
            {{#if ../currencies}}
                ({{../currency.abbrev}})
            {{/if}}
        </li>
    {{/each}}
</ul>
{{#unless currencies}}
    <p>All prices in {{currency.name}}</p>
{{/unless}}
{{#if specialsUrl}}
    {{! new block, but the context hasn't changed'}}
    <p>Check out our <a href="{{specialsUrl}}">specialsUrl</a></p>
{{else}}
    <p>Please check back often for specials.</p>
{{/if}}
<p>
    {{#each currencies}}
        <a href="#" class="currency">{{.}}</a>
    {{else}}
        Unfortunately, we currently only accept {{currency.name}}.
    {{/each}}
</p>